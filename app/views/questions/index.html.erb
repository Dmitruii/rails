<div class='container'>
  <p class='mt'>
    <%= link_to 'Create new question', new_question_path, class: 'button button_main' %>
  </p>

  <p class='mt'>
    <%= render 'form', question: @question %>
  </p> 
</div>

<div class='container mt-sm'>
  <h1 class='title-lg mb'>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'Вопрос', 'Вопроса', 'Вопросов') %>
  </h1>
</div>

<div>
  <% @questions.each do |question| %>
    <div class='container mt-sm'>
      <%= render question %>
    </div>
  <% end %>
</div>